<source>
  @type tail
  path /var/log/<%= @dir %>/<%= @name %>
  pos_file /var/log/td-agent/<%= @dir %>/<%= @name %>.pos
  tag <%= @dir %>-<%= @name %>
  format <%= @format %>
<% if @time_format != '' %>
  time_format <%= @time_format %>
<% end %>
</source>

<filter <%= @dir %>-<%= @name %>>
  type ec2_metadata

  <record>
    hostname    ${tagset_name}
    instance_id ${instance_id}
  </record>
</filter>

<match <%= @dir %>-<%= @name %>>
  @type copy

<% if @s3 %>
  <store>
    @type s3
    format json
    s3_bucket <%= @s3_bucket %>
    s3_region <%= @s3_region %>
    path <%= @dir %>/<%= @name %>/%Y/
    buffer_path /var/log/td-agent/<%= @dir %>/<%= @name %>/
    flush_at_shutdown true
    include_time_key true
  </store>
<% end %>
<% if @elasticsearch %>

  <store>
    @type elasticsearch
    type_name <%= @elasticsearch_index_prefix %><%= @name %>
    host <%= @elasticsearch_host %>
    port <%= @elasticsearch_port %>
    logstash_format true
    logstash_prefix <%= @elasticsearch_index_prefix %><%= @name %>
    include_tag_key true
    tag_key @log_name
    flush_interval 1m
  </store>
<% end %>
</match>
